    },
    "img": {
      "allowedTypes": ["images", "files", "videos", "audios"],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    }
  }
}
